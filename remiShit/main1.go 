package main

import (
	"fmt"
	"log"
	"net/rpc"
)

func main_client() {
	fmt.Println("Starting client...")
	cli, err := rpc.DialHTTP("tcp", ":1234")
	if err != nil {
		log.Fatal(err)
	}


	o_1 := Observer{1}
	var res *bool
	fmt.Print("Subscribing: ")
	fmt.Println(cli.Call("Subject.Suscribe", o_1, &res))
	fmt.Print("Publishing: ")
	fmt.Println(cli.Call("Subject.Publish", "Hello", &res))
	fmt.Print("Unubscribing: " )
	fmt.Println(cli.Call("Subject.Unuscribe", o_1, &res))
}